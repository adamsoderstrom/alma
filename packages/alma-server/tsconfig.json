{
    "compilerOptions": {
        "lib": ["esnext"],
        "outDir": "build",
        "target": "ESNext",
        "strict": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "paths": {
            "~": ["./src/"]
        }
    },
    "include": ["./src", "./types"],
    "files": ["./types/index.d.ts", "./types/express.d.ts"]
}
